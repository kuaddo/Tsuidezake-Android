<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="wantToDrinkViewModel"
            type="jp.kuaddo.tsuidezake.ui.want_to_drink.WantToDrinkViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            tools:listitem="@layout/item_want_to_drink_linear" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|top"
            android:layout_margin="12dp"
            android:background="@drawable/background_rounded_rectangle_4dp"
            android:backgroundTint="@color/light_gray"
            android:onClick="@{() -> wantToDrinkViewModel.switchRecyclerViewMode()}"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_grid"
                android:tint="@{wantToDrinkViewModel.isGridMode ? @color/colorPrimary : @color/white}"
                tools:tint="@color/colorPrimary" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@color/white" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="2dp"
                android:src="@drawable/ic_list"
                android:tint="@{wantToDrinkViewModel.isGridMode ? @color/white : @color/colorPrimary }"
                tools:tint="@color/white" />
        </LinearLayout>
    </FrameLayout>
</layout>
