<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drinkDetail"
            type="jp.kuaddo.tsuidezake.model.DrinkDetail" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <androidx.cardview.widget.CardView
            android:id="@+id/drink_image_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:layout_constraintDimensionRatio="w,4:5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/colorAccent" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/drink_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="@{drinkDetail.drink.name}"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/drink_price_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/drink_image_card"
            tools:text="獺祭" />

        <TextView
            android:id="@+id/drink_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@{@string/price(drinkDetail.price)}"
            app:layout_constraintBottom_toBottomOf="@+id/drink_name_text"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="¥12,000" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/tags_chip_group"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:chipSpacing="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/drink_price_text"
            app:layout_constraintStart_toStartOf="@+id/drink_name_text"
            app:layout_constraintTop_toBottomOf="@+id/drink_name_text"
            app:singleSelection="true" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
