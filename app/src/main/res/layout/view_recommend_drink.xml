<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="drinkDetail"
            type="jp.kuaddo.tsuidezake.model.DrinkDetail" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/drink_image_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintDimensionRatio="w,4:5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/want_to_drink_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:alpha="0"
                        android:src="@drawable/ic_dialog_want_to_drink"
                        app:tint="#FF0000" />

                    <ImageView
                        android:id="@+id/do_not_want_to_drink_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="8dp"
                        android:alpha="0"
                        android:src="@drawable/ic_dialog_do_not_want_to_drink"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="#0000FF" />
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/drink_name_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="@{drinkDetail.drink.name}"
                android:textSize="20sp"
                app:layout_constraintEnd_toStartOf="@+id/drink_price_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/drink_image_card"
                tools:text="獺祭" />

            <TextView
                android:id="@+id/drink_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@{@string/price(drinkDetail.price)}"
                app:layout_constraintBottom_toBottomOf="@+id/drink_name_text"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="¥12,000" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tags_chip_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:chipSpacing="8dp"
                app:layout_constraintEnd_toEndOf="@+id/drink_price_text"
                app:layout_constraintStart_toStartOf="@+id/drink_name_text"
                app:layout_constraintTop_toBottomOf="@+id/drink_name_text"
                app:singleSelection="true" />

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tags_chip_group">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/do_not_want_to_drink_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/dialog_do_not_want_to_drink"
                    app:cornerRadius="0dp" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/want_to_drink_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/want_to_drink"
                    app:cornerRadius="0dp" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
