<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_want_to_drink"
    app:startDestination="@id/want_to_drink_fragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/want_to_drink_fragment"
        android:name="jp.kuaddo.tsuidezake.ui.want_to_drink.WantToDrinkFragment"
        android:label="@string/want_to_drink"
        tools:layout="@layout/fragment_want_to_drink">

        <action
            android:id="@+id/action_want_to_drink_to_drink_detail"
            app:destination="@+id/drink_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/drink_detail_fragment"
        android:name="jp.kuaddo.tsuidezake.ui.drink.DrinkDetailFragment"
        android:label="@string/detail">

        <argument
            android:name="sakeId"
            app:argType="integer" />
    </fragment>
</navigation>