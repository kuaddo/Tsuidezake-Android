<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FullScreenDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/transparent_background</item>
    </style>

    <style name="TagChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">24dp</item>
        <item name="chipMinTouchTargetSize">24dp</item>
    </style>
</resources>
